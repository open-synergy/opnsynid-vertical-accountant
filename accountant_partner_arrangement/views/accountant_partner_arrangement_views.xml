<openerp>
<data>
<record id="accountant_partner_arrangement_view_form" model="ir.ui.view">
    <field name="name">accountant.partner_arrangement form</field>
    <field name="model">accountant.partner_arrangement</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button
                            name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            confirm="Confirm. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}"
                        />
                <button
                            name="request_validation"
                            string="Request Validation"
                            attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                            class="oe_highlight"
                            type="object"
                        />
                <button
                            name="restart_validation"
                            string="Restart Validation"
                            attrs="{'invisible': ['|','|','|',('review_ids', '=', []),('rejected','=',False),('state','not in',['confirm']),('restart_approval_ok','=',False)]}"
                            type="object"
                        />
                <button
                            name="%(base_print_policy.base_print_document_action)d"
                            string="Print"
                            type="action"
                            icon="gtk-print"
                        />
                <button
                            name="%(base_cancel_reason.base_cancel_reason_wizard_action)d"
                            type="action"
                            string="Cancel"
                            attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}"
                            confirm="Cancel. Are you sure?"
                        />
                <button
                            name="action_restart"
                            type="object"
                            string="Restart"
                            confirm="Restart. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}"
                        />
                <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,approve"
                        />
                <!-- <button name="action_confirm" type="object" string="Confirm" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}"/>
                <button name="action_valid" type="object" string="Valid" class="oe_highlight" attrs="{'invisible':['|',('state','!=','confirm'),('valid_ok','=',False)]}"/>
                <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible':['|',('state','not in',['draft','confirm','valid']),('cancel_ok','=',False)]}"/>
                <button name="action_restart" type="object" string="Restart" attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,valid"/> -->
            </header>
            <field name="need_validation" invisible="1" />
            <field name="validated" invisible="1" />
            <field name="rejected" invisible="1" />
            <div
                        class="alert alert-warning"
                        attrs="{'invisible': ['|', '|', '|',
                 ('validated', '=', True), ('state', 'not in', ['confirm']),
                 ('rejected', '=', True), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                <p><i class="fa fa-info-circle" />This appointment needs to be
                    validated.
                    <button
                                name="validate_tier"
                                string="Validate"
                                attrs="{'invisible': [('review_ids', '=', [])]}"
                                type="object"
                                class="oe_inline oe_button btn-success"
                                icon="terp-check"
                            />
                    <button
                                name="reject_tier"
                                string="Reject"
                                type="object"
                                class="btn-icon btn-danger"
                                icon="terp-gtk-stop"
                            />
                </p>
            </div>
            <sheet>
                <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name" />
                        <h2>
                            <field name="name" class="oe_edit_only" />
                            <field name="display_name" class="oe_read_only" />
                        </h2>
                        <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                            <label
                                        for="cancel_reason_id"
                                        string="Cancellation reason:"
                                    />
                            <field name="cancel_reason_id" class="oe_inline" />
                        </h2>
                    </div>
                </div>
                <label for="name" />
                <h1>
                    <field name="name" />
                </h1>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="managing_partner_id" />
                        <field name="date" />
                    </group>
                </group>
                <notebook>
                    <page name="partner" string="Partner(s)">
                        <field name="partner_ids" nolabel="1" colspan="4" />
                    </page>
                    <page name="page_note" string="Note">
                        <field name="note" colspan="4" nolabel="1" />
                    </page>
                    <page string="Reviews" name="tier_validation">
                        <group name="tier_validation_1" colspan="4" col="2">
                            <field
                                        name="definition_id"
                                        groups="l10n_id_taxform_1721a1.l10n_id_bukti_potong_taxform_1721a1_multiple_approval_setting_group"
                                    />
                            <field
                                        name="reviewer_partner_ids"
                                        widget="many2many_tags"
                                    />
                        </group>
                        <group name="tier_validation_2" colspan="4" col="2">
                            <field name="review_ids" readonly="1" />
                        </group>
                    </page>
                    <page name="page_policy" string="Policy" groups="base.group_system">
                        <group name="group_policy_1" colspan="4" col="2">
                            <field name="confirm_ok" />
                            <!-- <field name="valid_ok"/> -->
                            <field name="cancel_ok" />
                            <field name="restart_ok" />
                            <field name="restart_approval_ok" />
                        </group>
                    </page>
                    <page name="log" string="Logs">
                        <group name="group_5" colspan="4" col="3">
                            <group name="group_log_1" colspan="4" col="3">
                                <field name="confirm_date" string="Confirmation" />
                                <field name="confirm_user_id" nolabel="1" />
                                <field name="valid_date" string="Done" />
                                <field name="valid_user_id" nolabel="1" />
                                <field name="cancel_date" string="Cancellation" />
                                <field name="cancel_user_id" nolabel="1" />
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field
                            name="message_follower_ids"
                            widget="mail_followers"
                            groups="base.group_user"
                        />
                <field name="message_ids" widget="mail_thread" />
            </div>
        </form>
    </field>
</record>

<record id="accountant_partner_arrangement_view_tree" model="ir.ui.view">
    <field name="name">accountant.partner_arrangement tree</field>
    <field name="model">accountant.partner_arrangement</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="date" />
            <field name="managing_partner_id" />
            <field name="state" />
        </tree>
    </field>
</record>

<record id="accountant_partner_arrangement_view_search" model="ir.ui.view">
    <field name="name">accountant.partner_arrangement search</field>
    <field name="model">accountant.partner_arrangement</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="managing_partner_id" />
            <field name="date" />
            <field name="state" />
            <group name="group_state" string="State">
                <filter
                            name="filter_draft"
                            string="Draft"
                            domain="[('state','=','draft')]"
                        />
                <filter
                            name="filter_confirm"
                            string="Waiting for Approval"
                            domain="[('state','=','confirm')]"
                        />
                <filter
                            name="filter_valid"
                            string="Valid"
                            domain="[('state','=','valid')]"
                        />
                <filter
                            name="filter_cancel"
                            string="Cancel"
                            domain="[('state','=','cancel')]"
                        />
            </group>
            <group name="group_by" string="Group By..">
                <filter
                            name="grp_managing_partner"
                            string="Managing Partner"
                            context="{'group_by':'managing_partner_id'}"
                        />
                <filter
                            name="grp_date_year"
                            string="Date by Year"
                            context="{'group_by':'date:year'}"
                        />
                <filter
                            name="grp_date_month"
                            string="Date by Month"
                            context="{'group_by':'date:month'}"
                        />
                <filter
                            name="grp_date_day"
                            string="Date by Day"
                            context="{'group_by':'date:day'}"
                        />
                <filter
                            name="grp_state"
                            string="State"
                            context="{'group_by':'state'}"
                        />
            </group>
        </search>
    </field>
</record>

<record id="accountant_partner_arrangement_action" model="ir.actions.act_window">
    <field name="name">Partner Arrangement</field>
    <field name="res_model">accountant.partner_arrangement</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="accountant_partner_arrangement_view_search" />
</record>

<menuitem
            id="accountant_partner_arrangement_menu"
            name="Partner Arrangement"
            parent="accountant_app.accountant_configuration_menu"
            action="accountant_partner_arrangement_action"
            sequence="1"
        />


</data>
</openerp>
