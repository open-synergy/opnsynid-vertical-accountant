<openerp>
<data>

    <record id="accountant_general_audit_opinion_view_search" model="ir.ui.view">
        <field name="name">accountant.general_audit_opinion form</field>
        <field name="model">accountant.general_audit_opinion</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="code" />
            </search>
        </field>
    </record>

    <record id="accountant_general_audit_opinion_view_tree" model="ir.ui.view">
        <field name="name">accountant.general_audit_opinion tree</field>
        <field name="model">accountant.general_audit_opinion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="code" />
            </tree>
        </field>
    </record>

    <record id="accountant_general_audit_opinion_view_form" model="ir.ui.view">
        <field name="name">accountant.general_audit_opinion form</field>
        <field name="model">accountant.general_audit_opinion</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        />
                    <group name="group_1" colspan="4" col="2">
                        <field name="name" />
                        <field name="code" />
                        <field name="sequence" />
                        <field name="active" />
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accountant_general_audit_opinion_action" model="ir.actions.act_window">
        <field name="name">General Audit Opinions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">accountant.general_audit_opinion</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="accountant_general_audit_opinion_menu"
            name="Opinions"
            parent="accountant_configuration_general_audit_menu"
            action="accountant_general_audit_opinion_action"
            sequence="2"
        />


</data>
</openerp>
