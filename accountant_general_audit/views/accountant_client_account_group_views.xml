<openerp>
<data>

    <record id="accountant_client_account_group_view_search" model="ir.ui.view">
        <field name="name">accountant.client_account_group form</field>
        <field name="model">accountant.client_account_group</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="code" />
            </search>
        </field>
    </record>

    <record id="accountant_client_account_group_view_tree" model="ir.ui.view">
        <field name="name">accountant.client_account_group tree</field>
        <field name="model">accountant.client_account_group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="code" />
                <field name="sequence" />
            </tree>
        </field>
    </record>

    <record id="accountant_client_account_group_view_form" model="ir.ui.view">
        <field name="name">accountant.client_account_group form</field>
        <field name="model">accountant.client_account_group</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        />
                    <group name="group_1" colspan="4" col="2">
                        <field name="name" />
                        <field name="code" />
                        <field name="active" />
                        <field name="sequence" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="accountant_client_account_group_action" model="ir.actions.act_window">
        <field name="name">Account Group</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">accountant.client_account_group</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="accountant_client_account_group_menu"
            name="Account Group"
            parent="accountant_configuration_trial_balance_menu"
            action="accountant_client_account_group_action"
            sequence="2"
        />


</data>
</openerp>
