<odoo>

    <record id="accountant_report_stakeholder_report_view_search" model="ir.ui.view">
        <field name="name">accountant.report.stakeholder.report search</field>
        <field name="model">accountant.report_stakeholder_report</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="user_id" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="state" />
                <group name="group_state" string="State">
                    <filter
                        name="filter_draft"
                        string="Draft"
                        domain="[('state','=','draft')]"
                    />
                    <filter
                        name="filter_confirm"
                        string="Waiting for Approval"
                        domain="[('state','=','confirm')]"
                    />
                    <filter
                        name="filter_valid"
                        string="Valid"
                        domain="[('state','=','valid')]"
                    />
                    <filter
                        name="filter_cancel"
                        string="Cancel"
                        domain="[('state','=','cancel')]"
                    />
                </group>
                <group name="group_by" string="Group By..">
                    <filter
                        name="grp_user"
                        string="User"
                        context="{'group_by':'user_id'}"
                    />
                    <filter
                        name="grp_state"
                        string="State"
                        context="{'group_by':'state'}"
                    />
                    <filter
                        name="grp_date_start"
                        string="Start Date by"
                        context="{'group_by':'date_start'}"
                    />
                    <filter
                        name="grp_date_end"
                        string="End Date by"
                        context="{'group_by':'date_end'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="accountant_report_stakeholder_report_view_tree" model="ir.ui.view">
        <field name="name">accountant.report.stakeholder.report tree</field>
        <field name="model">accountant.report_stakeholder_report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id" optional="hide" />
                <field name="display_name" decoration-bf="1" />
                <field name="user_id" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="type_id" invisible="1" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="accountant_report_stakeholder_report_view_form" model="ir.ui.view">
        <field name="name">accountant.report.stakeholder.report form</field>
        <field name="model">accountant.report_stakeholder_report</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_approve_approval"
                        string="Approve"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('approve_ok','!=',True)]}"
                        confirm="Approve data. Are you sure?"
                    />
                    <button
                        name="action_reject_approval"
                        string="Reject"
                        type="object"
                        attrs="{'invisible':[('reject_ok','!=',True)]}"
                        confirm="Reject data. Are you sure?"
                    />
                    <button
                        name="action_confirm"
                        type="object"
                        string="Confirm"
                        class="oe_highlight"
                        confirm="Confirm. Are you sure?"
                        attrs="{'invisible':[('confirm_ok','=',False)]}"
                    />
                    <button
                        name="%(ssi_transaction_cancel_mixin.base_select_cancel_reason_action)d"
                        string="Cancel"
                        type="action"
                        attrs="{'invisible':[('cancel_ok','!=',True)]}"
                    />
                    <button
                        name="action_restart"
                        type="object"
                        string="Restart"
                        class="oe_highlight"
                        attrs="{'invisible':[('restart_ok','=',False)]}"
                        confirm="Restart Data. Are you sure?"
                    />
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirm,valid"
                    />
                </header>
                <field name="need_validation" invisible="1" />
                <field name="approved" invisible="1" />
                <field name="rejected" invisible="1" />
                <sheet>
                    <div
                        class="oe_right oe_button_box"
                        style="width: 300px;"
                        name="buttons"
                    >
                    </div>
                    <div name="header" class="oe_left" style="width: 500px;">
                        <div name="header_1" class="oe_title" style="width: 500px;">
                            <label for="display_name" />
                            <h1>
                              <field name="name" class="oe_edit_only" />
                              <field name="display_name" class="oe_read_only" />
                            </h1>
                            <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                                <label
                                    for="cancel_reason_id"
                                    string="Cancellation reason:"
                                />
                                <field name="cancel_reason_id" class="oe_inline" />
                            </h2>
                        </div>
                    </div>
                    <group name="stakeholder" colspan="4" col="2">
                        <group name="stakeholder_1" colspan="1" col="2">
                            <field name="user_id" />
                            <field name="type_id" invisible="1" />
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="page_note" string="Note">
                            <field name="note" colspan="4" nolabel="1" />
                        </page>
                        <page name="accountant" string="Accountant Reports">
                            <group name="accountant_1" colspan="4" col="2">
                                <field
                                    name="accountant_report_ids"
                                    nolabel="1"
                                    colspan="2"
                                />
                            </group>
                        </page>
                        <page
                            name="policy"
                            string="Policies"
                            groups="base.group_system"
                        >
                            <group name="policy_1" colspan="4" col="2">
                                <field name="policy_template_id" />
                                <button
                                    name="action_reload_policy_template"
                                    type="object"
                                    string="Reload Template Policy"
                                    class="oe_highlight"
                                    icon="fa-refresh"
                                />
                                <field name="confirm_ok" />
                                <field name="approve_ok" />
                                <field name="done_ok" />
                                <field name="cancel_ok" />
                                <field name="reject_ok" />
                                <field name="restart_ok" />
                            </group>
                        </page>
                        <page string="Approvals" name="multiple_approval">
                            <group name="multiple_approval_1" colspan="4" col="2">
                                <field name="approval_template_id" />
                                <button
                                    name="action_reload_approval_template"
                                    string="Reload Template"
                                    class="oe_highlight"
                                    type="object"
                                />
                                <newLine />
                                <field
                                    name="active_approver_partner_ids"
                                    widget="many2many_tags"
                                />
                            </group>
                            <field
                                name="approval_ids"
                                attrs="{'invisible':[('approval_ids', '=', [])]}"
                                nolabel="1"
                            />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

</odoo>
