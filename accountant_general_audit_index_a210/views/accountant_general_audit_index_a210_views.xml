<openerp>
<data>

    <record id="accountant_general_audit_index_a210_view_search" model="ir.ui.view">
        <field name="name">accountant.general_audit_index_a210 form</field>
        <field name="model">accountant.general_audit_index_a210</field>
        <field name="arch" type="xml">
            <search>
                <field name="id" />
                <field name="name" />
                <field name="general_audit_id" />
                <field name="account_type_set_id" />
                <field name="partner_id" />
                <field name="status_id" />
                <field name="user_id" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="company_id" groups="base.group_multi_company" />
                <group name="dom_state" string="State">
                    <filter
                            name="dom_draft"
                            string="Draft"
                            domain="[('state','=','draft')]"
                        />
                    <filter
                            name="dom_confirm"
                            string="Waiting for Approval"
                            domain="[('state','=','confirm')]"
                        />
                    <filter
                            name="dom_valid"
                            string="Valid"
                            domain="[('state','=','valid')]"
                        />
                    <filter
                            name="dom_cancel"
                            string="Cancel"
                            domain="[('state','=','cancel')]"
                        />
                    <filter
                            name="needs_review"
                            string="Needs my Review"
                            domain="
                                    [
                                    ('reviewer_ids','in',uid),
                                    ('state', 'not in', ['won', 'cancel', 'lost'])
                                    ]"
                        />
                </group>
                <separator />
                <group name="group" string="Group By">
                    <filter
                            name="grp_company"
                            string="Company"
                            context="{'group_by':'company_id'}"
                            groups="base.group_multi_company"
                        />
                    <filter
                            name="grp_partner"
                            string="Partner"
                            context="{'group_by':'partner_id'}"
                        />
                    <filter
                            name="grp_state"
                            string="State"
                            context="{'group_by':'state'}"
                        />
                    <filter
                            name="grp_status_id"
                            string="Status"
                            context="{'group_by':'status_id'}"
                        />
                    <filter
                            name="grp_date_start_year"
                            string="Date Start by Year"
                            context="{'group_by':'date_start:year'}"
                        />
                    <filter
                            name="grp_date_start_month"
                            string="Date Start by Month"
                            context="{'group_by':'date_start:month'}"
                        />
                    <filter
                            name="grp_date_start_week"
                            string="Date Start by Week"
                            context="{'group_by':'date_start:week'}"
                        />
                    <filter
                            name="grp_date_start_day"
                            string="Date Start by Day"
                            context="{'group_by':'date_start:day'}"
                        />
                    <filter
                            name="grp_date_end_year"
                            string="Date End by Year"
                            context="{'group_by':'date_end:year'}"
                        />
                    <filter
                            name="grp_date_end_month"
                            string="Date End by Month"
                            context="{'group_by':'date_end:month'}"
                        />
                    <filter
                            name="grp_date_end_week"
                            string="Date End by Week"
                            context="{'group_by':'date_end:week'}"
                        />
                    <filter
                            name="grp_date_end_day"
                            string="Date End by Day"
                            context="{'group_by':'date_end:day'}"
                        />
                </group>
            </search>
        </field>
    </record>

    <record id="accountant_general_audit_index_a210_view_tree" model="ir.ui.view">
        <field name="name">accountant.general_audit_index_a210 tree</field>
        <field name="model">accountant.general_audit_index_a210</field>
        <field name="arch" type="xml">
            <tree
                    colors="red:(state in ('confirm','valid'));blue:state == 'draft';grey:state == 'cancel';"
                >
                <field name="company_id" groups="base.group_multi_company" />
                <field name="display_name" string="# Document" />
                <field name="general_audit_id" />
                <field name="partner_id" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="account_type_set_id" />
                <field name="status_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="accountant_general_audit_index_a210_view_form" model="ir.ui.view">
        <field name="name">accountant.general_audit_index_a210 form</field>
        <field name="model">accountant.general_audit_index_a210</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                            name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            confirm="Confirm. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}"
                        />
                    <button
                            name="request_validation"
                            string="Request Validation"
                            attrs="{'invisible': ['|','|',('need_validation', '!=', True),('rejected','=',True),('state','not in',['confirm'])]}"
                            class="oe_highlight"
                            type="object"
                        />
                    <button
                            name="restart_validation"
                            string="Restart Validation"
                            attrs="{'invisible': ['|','|','|',('review_ids', '=', []),('rejected','=',False),('state','not in',['confirm']),('restart_validation_ok','=',False)]}"
                            type="object"
                        />
                    <button
                            name="%(base_print_policy.base_print_document_action)d"
                            string="Print"
                            type="action"
                            icon="gtk-print"
                        />
                    <button
                            name="%(base_cancel_reason.base_cancel_reason_wizard_action)d"
                            type="action"
                            string="Cancel"
                            attrs="{'invisible':['|',('state','=','cancel'),('cancel_ok','=',False)]}"
                            confirm="Cancel. Are you sure?"
                        />
                    <button
                            name="action_restart"
                            type="object"
                            string="Restart"
                            confirm="Restart. Are you sure?"
                            attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}"
                        />
                    <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,done"
                        />
                </header>
                <field name="need_validation" invisible="1" />
                <field name="validated" invisible="1" />
                <field name="rejected" invisible="1" />
                <div
                        class="alert alert-warning"
                        attrs="{'invisible': ['|', '|', '|',
                     ('validated', '=', True), ('state', 'not in', ['confirm']),
                     ('rejected', '=', True), ('review_ids', '=', [])]}"
                        style="margin-bottom:0px;"
                    >
                    <p><i
                                class="fa fa-info-circle"
                            />This General Audit Index A1101 needs to be
                        validated.
                        <button
                                name="validate_tier"
                                string="Validate"
                                attrs="{'invisible': [('review_ids', '=', [])]}"
                                type="object"
                                class="oe_inline oe_button btn-success"
                                icon="terp-check"
                            />
                        <button
                                name="reject_tier"
                                string="Reject"
                                type="object"
                                class="btn-icon btn-danger"
                                icon="terp-gtk-stop"
                            />
                    </p>
                </div>
                <sheet>
                    <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                    </div>
                    <div class="oe_left" style="width: 500px;">
                        <div class="oe_title" style="width: 500px;">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                              <field name="name" class="oe_edit_only" />
                              <field name="display_name" class="oe_read_only" />
                            </h1>
                            <label for="title" class="oe_edit_only" />
                            <h2 attrs="{'invisible': [('state', '!=', 'cancel')]}">
                                <label
                                        for="cancel_reason_id"
                                        string="Cancellation reason:"
                                    />
                                <field name="cancel_reason_id" class="oe_inline" />
                            </h2>
                        </div>
                    </div>
                    <group name="group_1" colspan="4" col="2">
                        <group name="group_1_1" colspan="1" col="2">
                            <field name="general_audit_id" required="1" />
                            <field
                                    name="general_audit_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />

                            <field
                                    name="company_id"
                                    groups="base.group_multi_company"
                                />
                            <field
                                    name="partner_id"
                                    domain="[('parent_id','=',False)]"
                                />
                            <field name="account_type_set_id" />

                            <field name="user_id" />
                        </group>
                        <group name="group_1_2" colspan="1" col="2">
                            <field name="date_start" />
                            <field name="date_end" />
                            <field name="previous_date_start" />
                            <field name="previous_date_end" />
                            <field name="interim_date_start" />
                            <field name="interim_date_end" />
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page name="materiality" string="Materiality">
                            <group name="materiality" colspan="4" col="2">
                                <label for="total_asset" />
                                <div>
                                    <field name="total_asset" class="oe_inline" />
                                    <field
                                            name="total_asset_extrapolation"
                                            class="oe_inline"
                                            nolabel="1"
                                        />
                                </div>
                                <label for="net_asset" />
                                <div>
                                    <field name="net_asset" class="oe_inline" />
                                    <field
                                            name="net_asset_extrapolation"
                                            class="oe_inline"
                                            nolabel="1"
                                        />
                                </div>
                                <label for="revenue" />
                                <div>
                                    <field name="revenue" class="oe_inline" />
                                    <field
                                            name="revenue_extrapolation"
                                            class="oe_inline"
                                            nolabel="1"
                                        />
                                </div>
                                <label for="cost_of_revenue" />
                                <div>
                                    <field name="cost_of_revenue" class="oe_inline" />
                                    <field
                                            name="cost_of_revenue_extrapolation"
                                            class="oe_inline"
                                            nolabel="1"
                                        />
                                </div>
                                <label for="ebt" />
                                <div>
                                    <field name="ebt" class="oe_inline" />
                                    <field
                                            name="ebt_extrapolation"
                                            class="oe_inline"
                                            nolabel="1"
                                        />
                                </div>
                                <label for="ebitda" />
                                <div>
                                    <field name="ebitda" class="oe_inline" />
                                    <field
                                            name="ebitda_extrapolation"
                                            class="oe_inline"
                                            nolabel="1"
                                        />
                                </div>
                                <label for="total_liability" />
                                <div>
                                    <field name="total_liability" class="oe_inline" />
                                    <field
                                            name="total_liability_extrapolation"
                                            class="oe_inline"
                                            nolabel="1"
                                        />
                                </div>
                                <field name="other_base_amount" />
                                <field name="base_amount" />
                            </group>
                            <group
                                    name="materiality_2"
                                    colspan="4"
                                    col="2"
                                    string="Overall Materiality"
                                >
                                <field
                                        name="overall_materiality_percentage"
                                        string="Percentage"
                                    />
                                <field name="overall_materiality" string="Year End" />
                                <field
                                        name="overall_materiality_extrapolation"
                                        string="Extrapolation"
                                    />
                                <field
                                        name="overall_materiality_consideration"
                                        string="Consideration"
                                    />
                            </group>
                            <group
                                    name="materiality_3"
                                    colspan="4"
                                    col="2"
                                    string="Performance Materiality"
                                >
                                <field
                                        name="performance_materiality_percentage"
                                        string="Percentage"
                                    />
                                <field
                                        name="performance_materiality"
                                        string="Year End"
                                    />
                                <field
                                        name="performance_materiality_extrapolation"
                                        string="Extrapolation"
                                    />
                                <field
                                        name="performance_materiality_consideration"
                                        string="Consideration"
                                    />
                            </group>
                            <group
                                    name="materiality_4"
                                    colspan="4"
                                    col="2"
                                    string="Tolerable Misstatement"
                                >
                                <field
                                        name="tolerable_misstatement_percentage"
                                        string="Percentage"
                                    />
                                <field
                                        name="tolerable_misstatement"
                                        string="Year End"
                                    />
                                <field
                                        name="tolerable_misstatement_extrapolation"
                                        string="Extrapolation"
                                    />
                                <field
                                        name="tolerable_misstatement_consideration"
                                        string="Consideration"
                                    />
                            </group>
                            <group
                                    name="materiality_5"
                                    colspan="4"
                                    col="2"
                                    string="Conslusion"
                                >
                                <field name="status_id" />
                                <field name="conclusion" />
                            </group>
                        </page>
                        <page string="Reviews" name="tier_validation">
                            <group name="tier_validation_1" colspan="4" col="2">
                                <field
                                        name="definition_id"
                                        groups="account_general_audit.accountant_general_audit_index_a210_multiple_approval_setting_group"
                                    />
                                <field
                                        name="reviewer_partner_ids"
                                        widget="many2many_tags"
                                    />
                            </group>
                            <group name="tier_validation_2" colspan="4" col="2">
                                <field name="review_ids" readonly="1" />
                            </group>
                        </page>
                        <page
                                name="policy"
                                string="Policies"
                                groups="accountant_general_audit_index_a210.accountant_general_audit_index_a210_workflow_policy_setting_group"
                            >
                            <group name="policy_1" colspan="4" col="2">
                                <field name="confirm_ok" />
                                <field name="valid_ok" />
                                <field name="restart_validation_ok" />
                                <field name="cancel_ok" />
                                <field name="restart_ok" />
                            </group>
                        </page>
                        <page name="log" string="Logs">
                            <group name="group_log" colspan="4" col="3">
                                <group name="group_log_1" colspan="4" col="3">
                                    <field name="confirm_date" string="Confirmation" />
                                    <field name="confirm_user_id" nolabel="1" />
                                    <field name="valid_date" string="Validation" />
                                    <field name="valid_user_id" nolabel="1" />
                                    <field name="cancel_date" string="Cancellation" />
                                    <field name="cancel_user_id" nolabel="1" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
                            name="message_follower_ids"
                            widget="mail_followers"
                            groups="base.group_user"
                        />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record
            id="accountant_general_audit_index_a210_action"
            model="ir.actions.act_window"
        >
        <field name="name">General Audit Index A.210</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">accountant.general_audit_index_a210</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'readonly_by_pass': True,
            'search_default_dom_draft':1,
            'search_default_dom_confirm':1,
            }
        </field>
    </record>

    <menuitem
            id="accountant_general_audit_index_a210_menu"
            name="Index A.210"
            parent="accountant_general_audit.accountant_risk_assessment_menu"
            action="accountant_general_audit_index_a210_action"
            sequence="1"
        />


</data>
</openerp>
