<?xml version="1.0" ?>
<openerp>
<data>
<record id="accountant_report_view_form" model="ir.ui.view">
    <field name="name">accountant.report form</field>
    <field name="model">accountant.report</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button
                            name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            attrs="{'invisible':['|',('state','!=','draft'),('confirm_ok','=',False)]}"
                        />
                <button
                            name="action_finalize"
                            type="object"
                            string="Finalization"
                            class="oe_highlight"
                            attrs="{'invisible':['|',('state','!=','confirm'),('finalize_ok','=',False)]}"
                        />
                <button
                            name="action_valid"
                            type="object"
                            string="Valid"
                            class="oe_highlight"
                            attrs="{'invisible':['|',('state','!=','finalize'),('valid_ok','=',False)]}"
                        />
                <button
                            name="action_cancel"
                            type="object"
                            string="Cancel"
                            attrs="{'invisible':['|',('state','not in',['draft','confirm','finalize','valid']),('cancel_ok','=',False)]}"
                        />
                <button
                            name="action_restart"
                            type="object"
                            string="Restart"
                            attrs="{'invisible':['|',('state','!=','cancel'),('restart_ok','=',False)]}"
                        />
                <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,finalize,valid"
                        />
            </header>
            <sheet>
                <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                </div>
                <div class="oe_left" style="width: 500px;">
                    <div class="oe_title" style="width: 500px;">
                        <label for="name" />
                        <h1>
                            <field name="name" class="oe_edit_only" readonly="1" />
                            <field name="display_name" class="oe_read_only" />
                        </h1>
                    </div>
                </div>
                <group name="group_1" colspan="4" col="2">
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="company_id" groups="base.group_multi_company" />
                        <field
                                    name="partner_id"
                                    domain="[('customer','=',True),('parent_id','=',False)]"
                                />
                        <field name="date_start" />
                        <field name="date_end" />
                    </group>
                    <group name="group_1_1" colspan="1" col="2">
                        <field name="assurance" invisible="1" />
                        <field
                                    name="service_id"
                                    domain="[('assurance','=',assurance)]"
                                />
                        <field name="firm_subsequent_num" />
                        <field name="subsequent_num" />
                        <field name="restatement_mode" />
                        <field
                                    name="restatement_id"
                                    attrs="{'invisible': [('restatement_mode','=','manual')]}"
                                />
                        <field
                                    name="restatement_report"
                                    string="Restatement Report"
                                    attrs="{'invisible': [('restatement_mode','=','odoo')]}"
                                />
                        <field name="method_required" />
                        <field
                                    name="allowed_method_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                        <field
                                    name="method_id"
                                    domain="[('id', 'in', allowed_method_ids[0][2])]"
                                    attrs="{'required':[('method_required','=',True)]}"
                                />
                        <field name="date" />
                        <field
                                    name="signing_accountant_id"
                                    domain="[('id', 'in', allowed_signing_accountant_ids[0][2])]"
                                />
                        <field name="opinion_required" />
                        <field
                                    name="report_opinion_id"
                                    domain="[('id', 'in', allowed_opinion_ids[0][2])]"
                                    attrs="{'required':[('opinion_required','=',True)]}"
                                />
                        <field
                                    name="allowed_signing_accountant_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                        <field
                                    name="allowed_opinion_ids"
                                    widget="many2many_tags"
                                    invisible="1"
                                />
                    </group>
                </group>
                <notebook>
                    <page name="client" string="Client Informations">
                        <group name="client_1" colspan="4" col="2">
                            <field name="information_based" />
                            <field name="report_currency_id" />
                            <field
                                        name="revenue"
                                        widget="monetary"
                                        options="{'currency_field':'report_currency_id'}"
                                    />
                            <field
                                        name="total_asset"
                                        widget="monetary"
                                        options="{'currency_field':'report_currency_id'}"
                                    />
                            <field
                                        name="total_liability"
                                        widget="monetary"
                                        options="{'currency_field':'report_currency_id'}"
                                    />
                            <field
                                        name="ebit"
                                        widget="monetary"
                                        options="{'currency_field':'report_currency_id'}"
                                    />
                            <field
                                        name="tax_expense"
                                        widget="monetary"
                                        options="{'currency_field':'report_currency_id'}"
                                    />
                            <field
                                        name="total_net_profit"
                                        widget="monetary"
                                        options="{'currency_field':'report_currency_id'}"
                                    />
                            <field
                                        name="total_net_profit_oci"
                                        widget="monetary"
                                        options="{'currency_field':'report_currency_id'}"
                                    />
                        </group>
                    </page>
                    <page name="page_note" string="Note">
                        <field name="note" colspan="4" nolabel="1" />
                    </page>
                    <page name="page_policy" string="Policy" groups="base.group_system">
                        <group name="group_policy_1" colspan="4" col="2">
                            <field name="confirm_ok" />
                            <field name="finalize_ok" />
                            <field name="valid_ok" />
                            <field name="cancel_ok" />
                            <field name="restart_ok" />
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field
                            name="message_follower_ids"
                            widget="mail_followers"
                            groups="base.group_user"
                        />
                <field name="message_ids" widget="mail_thread" />
            </div>
        </form>
    </field>
</record>

<record id="accountant_report_view_readonly_form" model="ir.ui.view">
    <field name="name">accountant.report.readonly.form</field>
    <field name="model">accountant.report</field>
    <field name="inherit_id" ref="accountant_report.accountant_report_view_form" />
    <field
                name="groups_id"
                eval="[(6, 0, [ref('accountant_report.group_accountant_report_change_number')])]"
            />
    <field name="arch" type="xml">
        <field name="name" position="attributes">
            <attribute name="readonly">False</attribute>
        </field>
    </field>
</record>

<record id="accountant_report_view_tree" model="ir.ui.view">
    <field name="name">accountant.report tree</field>
    <field name="model">accountant.report</field>
    <field name="arch" type="xml">
        <tree>
            <field name="id" />
            <field name="name" />
            <field name="partner_id" />
            <field name="date" />
            <field name="date_start" />
            <field name="date_end" />
            <field name="signing_accountant_id" />
            <field name="service_id" />
            <field name="report_opinion_id" />
            <field name="method_id" />
            <field name="state" />
        </tree>
    </field>
</record>

<record id="accountant_report_view_search" model="ir.ui.view">
    <field name="name">accountant.report search</field>
    <field name="model">accountant.report</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="partner_id" />
            <field name="date" />
            <field name="date_start" />
            <field name="date_end" />
            <field name="signing_accountant_id" />
            <field name="service_id" />
            <field name="report_currency_id" />
            <field name="report_opinion_id" />
            <field name="method_id" />
            <field name="state" />
            <group name="group_state" string="State">
                <filter
                            name="filter_draft"
                            string="Draft"
                            domain="[('state','=','draft')]"
                        />
                <filter
                            name="filter_confirm"
                            string="Waiting for Approval"
                            domain="[('state','=','confirm')]"
                        />
                <filter
                            name="filter_valid"
                            string="Valid"
                            domain="[('state','=','valid')]"
                        />
                <filter
                            name="filter_cancel"
                            string="Cancel"
                            domain="[('state','=','cancel')]"
                        />
            </group>
            <group name="group_by" string="Group By..">
                <filter
                            name="grp_partner"
                            string="Customer"
                            context="{'group_by':'partner_id'}"
                        />
                <filter
                            name="grp_date_year"
                            string="Date by Year"
                            context="{'group_by':'date:year'}"
                        />
                <filter
                            name="grp_date_month"
                            string="Date by Month"
                            context="{'group_by':'date:month'}"
                        />
                <filter
                            name="grp_date_day"
                            string="Date by Day"
                            context="{'group_by':'date:day'}"
                        />
                <filter
                            name="grp_signing_partner"
                            string="Signing Accountant"
                            context="{'group_by':'signing_accountant_id'}"
                        />
                <filter
                            name="grp_service"
                            string="Service"
                            context="{'group_by':'service_id'}"
                        />
                <filter
                            name="grp_currency"
                            string="Report Currency"
                            context="{'group_by':'report_currency_id'}"
                        />
                <filter
                            name="grp_opinion"
                            string="Report Opinion"
                            context="{'group_by':'report_opinion_id'}"
                        />
                <filter
                            name="grp_method"
                            string="Method"
                            context="{'group_by':'method_id'}"
                        />
                <filter
                            name="grp_state"
                            string="State"
                            context="{'group_by':'state'}"
                        />
            </group>
        </search>
    </field>
</record>

<record id="accountant_assurance_report_action" model="ir.actions.act_window">
    <field name="name">Assurance Report</field>
    <field name="res_model">accountant.report</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="accountant_report_view_search" />
    <field name="domain">[('assurance','=',True)]</field>
    <field name="context">{'default_assurance':True, 'readonly_by_pass': True}</field>
</record>

<record id="accountant_non_assurance_report_action" model="ir.actions.act_window">
    <field name="name">Non-Assurance Report</field>
    <field name="res_model">accountant.report</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="accountant_report_view_search" />
    <field name="domain">[('assurance','=',False)]</field>
    <field name="context">{'default_assurance':False, 'readonly_by_pass': True}</field>
</record>

<menuitem
            id="accountant_report_menu"
            name="Accountant Report"
            parent="accountant_app.accountant_main_menu"
            sequence="1"
        />

<menuitem
            id="accountant_assurance_report_menu"
            name="Assurance"
            parent="accountant_report_menu"
            action="accountant_assurance_report_action"
            sequence="1"
        />

<menuitem
            id="accountant_non_assurance_report_menu"
            name="Non-Assurance"
            parent="accountant_report_menu"
            action="accountant_non_assurance_report_action"
            sequence="2"
        />

</data>
</openerp>
